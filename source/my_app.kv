<RightContentCls>
    disabled: True
    adaptive_size: True
    pos_hint: {"center_y": .5}

    MDIconButton:
        icon: root.icon
        user_font_size: "16sp"
        md_bg_color_disabled: 0, 0, 0, 0

    MDLabel:
        text: root.text
        font_style: "Caption"
        adaptive_size: True
        pos_hint: {"center_y": .5}


<Item>

    IconLeftWidget:
        icon: root.left_icon

    RightContentCls:
        id: container
        icon: root.right_icon
        text: root.right_text


MDBoxLayout:
    orientation: 'vertical'

    MDScreen:

        FitImage:
            source: "image/Hudson_sollutions_white.png"
            size_hint_y: .20
            pos_hint: {"top": .95}
            radius: 36, 36, 0, 0
        
        MDRoundFlatButton:
            id: button
            text: "Select city"
            text_color: "white"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: app.theme_cls.primary_dark
            on_release: app.menu.open()