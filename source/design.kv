<TextInput>
    color: '#000000'
    background_color: '#cac4bf'
    halign: 'center'
    padding_y: 35

<Button>
    color: '#000000'
    background_color: '#E48C2B'
    background_normal: ''

<Label>
    font_size: 20


<MyGridLayout>
    country: country
    city: city

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x' : 0.5, 'center_y' : 0.5 }
        padding: [50,0,50,50]
        spacing: 5
        size: root.width, root.height

        Image: 
            source:'Hudson_sollutions_white.png'
            allow_stretch: True
            keep_ratio: True 
            

        Label:
            text: 'Select country'

        TextInput: 
            id: country
            multiline: False
          
        Label:
            text: 'Select city'

        TextInput: 
            id: city
            multiline: False
            
        Button:
            text: "OK"
            pos_hint: {'center_x' : 0.5}
            size_hint: (0.2,0.4)
            bold: True
            on_press: root.press()
