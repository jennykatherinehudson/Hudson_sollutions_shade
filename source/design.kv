<MyGridLayout>
    country: country
    city: city

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x' : 0.5, 'center_y' : 0.5 }
        padding: 50
        spacing: 5
        size: root.width, root.height

        Image: 
            source:'Hudson_sollutions_white.png'

        Label:
            text: 'Select country'
            font_size: 18

        TextInput: 
            id: country
            multiline: False
            color: '#000000'
            background_color: '#cac4bf'
            

        Label:
            text: 'Select city'
            font_size: 18

        TextInput: 
            id: city
            multiline: False
            color: '#000000'
            background_color: '#cac4bf'
            
        Button:
            text: "OK"
            pos_hint: {'center_x' : 0.5}
            size_hint: (0.2,0.4)
            bold: True
            color: '#000000'
            background_color: '#E48C2B'
            background_normal: ''
            on_press: root.press()
